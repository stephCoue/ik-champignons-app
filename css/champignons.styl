/* HEADER to clean*/


.header-on {
  top: 0;
}

.header-tous .champignons {
  display: none;
}

.header-tous .tous {
  display: block;
}

.header-champignon .champignons {
  display: block;
}

.header-champignon .tous {
  display: none;
}

.content-header .table {
  position: absolute;
  top: 12px;
  right: 10px;
  width: auto;
}

.content-header a {
  width: 24px;
  height: 24px;
  margin-left: 20px;
  background-image: url(images/boutons-tous.png);
  background-repeat: no-repeat;
}

.header-tous li + li a {
  background-position: -50px 0;
}

.header-tous li + li + li a {
  background-position: -100px 0;
}

.header-tous .on a {
  background-position: 0 -50px;
}

.header-tous li + .on a {
  background-position: -50px -50px;
}

.header-tous li + li + .on a {
  background-position: -100px -50px;
}

.content-header .back {
  background-position: -150px 0;
}

.content-header .on .back, .content-header .back:active {
  background-position: -150px -50px;
}

.content-header .cueillette {
  background-position: -200px 0;
}
.content-header .on .cueillette, .content-header .cueillette:active {
  background-position: -200px -50px;
}

.header-determiner .tous, .header-determiner .champignons {
  display: none;
}






/*CHAMPS RECHERCHE*/

.search
  position: relative
  margin: 1px -10px
  padding-top: 8px
  .inner
    margin: 0 10px
    position: relative

  input
    display block
    width: 97%
    padding: 4px 5px;
    margin: 0 auto;
    border: 0 none;
    border-radius: 4px;
    font-size: 0.8em
    padding-left: 30px

    &:focus
      outline-color: lighten($ombreHeaders, 70%)

  .loupe
    display block
    width 22px
    height 22px
    position: absolute
    background transparent url('images/search-21px.png') 0 0 no-repeat
    left: 9px
    top: 2px

  .bouton
    display: none;
    position: absolute;
    width: 30px;
    height: 30px;
    right: 6px;
    top: 50%;
    margin-top: -15px;
    background-image: url(images/close.png);
    background-repeat: no-repeat;
    background-position: center;
    background-size: 60%;
    opacity: 0.3
    &:active
      opacity: 1


/*  FILTRES */

.filtres
  margin: 0 6px
  font-family: 'fjalla_oneregular'
  .cell
    width (100/3)%
  a
    display block
    color lighten($titreColor, 60%)
    padding 6px 0
    text-align center
    font-size .9em
    text-transform uppercase

  .on
    a
      color $titreColor






