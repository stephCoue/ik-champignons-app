@import 'nib'

global-reset()

*
  box-sizing: border-box

// Variables

$primary = #BBD029 || rgb(187,208,41); // green claire
$institut = #658833 || rgb(101,136,51); // green fonc√©
$secondColor = #E3D9C0 || rgb(227,217,192); // marron claire
$titreColor = #534741 || rgb(83,71,65); // marron fonce
$infoBulleNotification = #d0470a || rgb(208,71,10); // rouge


/*  COMMUN  */

body
  font-family: "Scada-Bold"
  -webkit-font-smoothing: antialiased
  line-height: 1.2em
  color: $titreColor // #534741

a
  text-decoration: none

/*  UTILITAIRES */
table
  display: table
  width: 100%

.cell
  display: table-cell

.bouton
  display: block

hidetext()
  font: 0/0 a
  color: transparent
  text-shadow: none
  background-color: transparent
  border: 0

centerBlock()
  margin: 0 auto


/* STRUCTURE */
.viewport
  position: fixed
  width: 100%
  height: 100%
  opacity: 0
  -webkit-transition: opacity .5s

/*  ZONE DE CONTENUS */

.content-main
  width: 100%;

.page
  position: absolute
  width: 100%
  height: 100%
  background:  url('images/bois-brun-fonce.png')
  box-shadow: 0 0 20px rgba(0,0,0,0.5)
  overflow-y: scroll
  overflow-x: hidden
  -webkit-overflow-scrolling: touch
  -webkit-transition: -webkit-transform .2s ease
  -webkit-transform-style: preserve-3d
  -webkit-transform: translate3d(0,0,0)

/* PAGE INNER*/

.page-inner
  margin: 3% auto

header,
footer
  width: 100%;

.page-inner
  h1
    hidetext()
    background: url('images/logo-app.png');
    background-repeat:no-repeat;
    background-size: contain;
    background-position: center bottom
    min-height: 85px //288px
    width: 70%
    centerBlock()

.logo
  min-height:  57px // 340px;
  background: url('images/logo-ik-couleur.png');
  background-repeat:no-repeat;
  background-size: contain;
  background-position: center
  width: 17%;
  height: auto;
  centerBlock()


.nav-main
  font-size: 140%
  margin: 4% auto
  span
    text-transform: uppercase
    color: $primary
    display: block
    margin-bottom: .2em
  ul
    width: 90%
    centerBlock()
  li
    padding: .7em 0
    border-top-image: url("images/nav-main-hr.png") 100% repeat

  a
    color: $secondColor
    position: relative
    padding-left: 35%

    &:before
      content: ""
      display: block
      position: absolute
      background-image: url('images/sprite-menu-picto.png')
      background-repeat: no-repeat
      background-position: 0 0
      width: 57px
      height: 57px
      left: 9%
      top: - .4em

    &.tous:before
      background-position: -57px 0
    &.aide:before
      background-position: -114px 0
    &.lecon:before
      background-position: -171px 0
    &.infos:before
      background-position: -228px 0



































