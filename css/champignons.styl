/*PAGE CHAMPIGNON*/

.page-champignon .page-inner {
  margin: 60px 10px;
}
.page-champignon .diaporama {
  width: 100%;
  margin-bottom: 10px;
  background-color: #fff;
}

.page-champignon .diaporama img {
  display: block;
  margin: 0 auto;
}

/* PAGE TOUS */

.page-tous .page-inner {
  margin: 50px 10px;
}

/*LISTES DE CHAMPIGNONS*/

.liste-champignons a {
  display: block;
}

/* FILTRES */

.filtres {
  margin: 0 -10px;
  background-color: #999;
}

.filtres .cell {
  width: 33.333%;
}

.filtres a {
  display: block;
  padding: 6px 0;
  text-align: center;
  font-size: 0.7em;
  text-transform: uppercase;
}

.filtres a:active {
  font-weight: bold;
}

.filtres .on a {
  font-weight: bold;
  background-color: #666;
  color: #fff;
}

/*CHAMPS RECHERCHE*/

.search {
  position: relative;
  margin: 1px -10px;
  padding: 10px 0;
  background-color: #999;
}

.search .inner {
  margin: 0 10px;
}

.search input {
  display: block;
  width: 97%;
  padding: 4px 5px;
  margin: 0 auto;
  border: 0 none;
  border-radius: 4px;
  font-size: 0.8em;
}

.search .bouton {
  display: none;
  position: absolute;
  width: 30px;
  height: 30px;
  right: 6px;
  top: 50%;
  margin-top: -15px;
  background-image: url(images/close.png);
  background-repeat: no-repeat;
  background-position: center;
  background-size: 60%;
  opacity: 0.3;
}

.search .bouton:active {
  opacity: 1.0;
}

/*VUE EN GRILLE*/

.grille li {
  width: 33.33%;
  float: left;
  font-size: 0.80em;
  line-height: 1.1em;
}

.grille li:nth-child(3n+4) {
  clear: left;
}

.grille li:last-child {
  margin-bottom: 50px;
}

.grille .inner {
  margin: 5%;
}

/*VUE EN LISTE*/

.liste li {
  border: 1px solid #aaa;
  border-width: 1px 0;
  clear: both;
  margin-bottom: -1px;
}

.liste .inner {
  margin: 5px 0;
  display: table;
}

.liste .vignette, .liste .textes {
  display: table-cell;
  vertical-align: middle;
}

.liste .textes {
  padding-left: 10px;
}

.liste .vignette {
  width: 24%;
}

/*HEADER*/

.content-header {
  position: fixed;
  top: -100px;
  width: 100%;
  background-color: #333;
  color: #999;
  z-index: 10;
  -webkit-transition: all .2s;
}

.content-header h1 {
  margin: 5px 10px;
  line-height: 40px;
  text-align: left;
  font-size: 1.2em;
}

.header-on {
  top: 0;
}

.header-tous .champignons {
  display: none;
}

.header-tous .tous {
  display: block;
}

.header-champignon .champignons {
  display: block;
}

.header-champignon .tous {
  display: none;
}

.content-header .table {
  position: absolute;
  top: 12px;
  right: 10px;
  width: auto;
}

.content-header a {
  width: 24px;
  height: 24px;
  margin-left: 20px;
  background-image: url(images/boutons-tous.png);
  background-repeat: no-repeat;
}

.header-tous li + li a {
  background-position: -50px 0;
}

.header-tous li + li + li a {
  background-position: -100px 0;
}

.header-tous .on a {
  background-position: 0 -50px;
}

.header-tous li + .on a {
  background-position: -50px -50px;
}

.header-tous li + li + .on a {
  background-position: -100px -50px;
}

.content-header .back {
  background-position: -150px 0;
}

.content-header .on .back, .content-header .back:active {
  background-position: -150px -50px;
}

.content-header .cueillette {
  background-position: -200px 0;
}
.content-header .on .cueillette, .content-header .cueillette:active {
  background-position: -200px -50px;
}

/*FOOTER*/

.content-footer {
  position: fixed;
  width: 100%;
  top: 100%;
  background-color: #333;
  z-index: 10;
  -webkit-transition: all .2s linear;
}

.content-footer .cell {
  text-align: center;
}

.content-footer a {
  display: block;
  padding: 10px 5px;
  color: #aaa;
}

.content-footer .on a, .content-footer a:active {
  color: #fff;
}

.vignette img {
  max-width: 100%;
  height: auto;
}

/* FICHES CHAMPIGNON */

.page .slides {
  float: left;
  display: inline;
  -webkit-transition-property: -webkit-transform;
  -webkit-transition-timing-function: ease-out;
  -webkit-transform: translate3d(0,0,0);
}

.page .slide {
  float: left;
  padding: 50px 0;
  -webkit-transform: translate3d(0,0,0);
}


