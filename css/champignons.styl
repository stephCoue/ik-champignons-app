/* HEADER to clean*/


.header-on {
  top: 0;
}

.header-tous .champignons {
  display: none;
}

.header-tous .tous {
  display: block;
}

.header-champignon .champignons {
  display: block;
}

.header-champignon .tous {
  display: none;
}

.header-tous li + li a {
  background-position: -50px 0;
}

.header-tous li + li + li a {
  background-position: -100px 0;
}

.header-tous .on a {
  background-position: 0 -50px;
}

.header-tous li + .on a {
  background-position: -50px -50px;
}

.header-tous li + li + .on a {
  background-position: -100px -50px;
}

.header-determiner .tous, .header-determiner .champignons {
  display: none;
}



.liste-champignons
  .familleChampignon
    display none


