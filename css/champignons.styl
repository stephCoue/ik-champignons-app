.slide-inner
  h2
    font-family fjalla_oneregular
    font-size 2em
    line-height: 1.2
    text-align center

  &>h3
    @extend .slide-inner h2
    font-family "sofiaregular"
    font-size 1.5em
    margin-bottom: .6em

  >div
    margin-bottom: .6em
    &>h3
      color $institut
      text-transform uppercase














/*PAGE CHAMPIGNON*/

.page-champignon .page-inner {
  margin: 60px 10px;
}
.page-champignon .diaporama {
  width: 100%;
  margin-bottom: 10px;
  background-color: #fff;
}

.page-champignon .diaporama img {
  display: block;
  margin: 0 auto;
}

/* PAGE TOUS */

.page-tous .page-inner {
  margin: 50px 10px;
}

/*LISTES DE CHAMPIGNONS*/

.liste-champignons a {
  display: block;
}




.vignette img {
  max-width: 100%;
  height: auto;
}

/* FICHES CHAMPIGNON */

.page-champignon {
  overflow-y: hidden;
}

.page-champignon .slides {
  height: 100%;
  -webkit-transition-property: -webkit-transform;
  -webkit-transition-timing-function: ease-out;
  -webkit-transform: translate3d(0,0,0);
}

.page-champignon .slide {
  height: 100%;
  overflow-y: scroll;
  float: left;
  -webkit-transform: translate3d(0,0,0);
}

.page-champignon .slide-inner {
  margin: 0 10px;
  padding: 60px 0 80px;
  text-shadow: 1px 2px 0 #fff;
}

.slide-inner p {
  font-family: "scadaregular";
}


