/*
  *   Module
  */



.page-champignon > .currentSlide {
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  overflow-y: scroll;
  background: url("images/paper-background.jpg") center;
}

.sidebar {
  display: none;
}


.on .bouton .picto {
  background-position-y: -30px;
}

/*PAGE DETERMINER*/

#critere-selection-box {
  height: 100px;
  margin-bottom: 20px;
  -webkit-transition: margin-top .2s linear;
}

.critere-off {
  margin-top: -100px;
}

.critere-on {
  margin-top: 0;
}

.header-tous .determiner, .header-champignon .determiner {
  display: none;
}

/*POPUP TERME DU GLOSSAIRE*/

.popup {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.8);
  color: #fff;
}

.popup dl {
  margin: 70px 20px;
}

.page-champignon .slides {
  box-shadow: 0 0 30px rgba(0,0,0,0.75);
}

.slide .cueillette {
  position: absolute;
  right: 20px;
  top: 70px;
  width: 20px;
  height: 20px;
  background-color: #bbb;
}

.slide .cueillette-on {
  background-color: #f00;
}



/*  Titre */

.titre
  color  $primary
  text-transform uppercase
  display block
  font-size 18px

.sous-titre
  font-size 14px
  position: absolute
  color $secondColor


/*  Picto */

.picto
  width: 30px
  height: 30px
  display block


/*FOND PAPIER*/

.papier {
  background: #fff url(images/paper-background.jpg);
  background-size: 100% auto;
}

/*#HEADER*/

/*BOUTONS HEADER*/

.content-header {
  overflow: hidden;
}

.content-header .table {
  position: absolute;
  top: 5px;
  right: 10px;
}

.content-header .bouton {
  display: block;
  width: 40px;
  height: 40px;
  margin: 0;
  background: transparent url(images/header-icon-set.png) no-repeat left center;
}

.content-header .grille { background-position: -40px 0; }
.content-header .on .grille { background-position: -40px -40px; }

.content-header .liste { background-position: 0 0; }
.content-header .on .liste { background-position: 0 -40px; }

.content-header .show { background-position: -120px -40px; }
.content-header .show:active { background-position: -120px -40px; }

.content-header .cueillette { background-position: -200px 0; }
.content-header .on .cueillette { background-position: -200px -40px; }

.header-cueillette .tous, .header-cueillette .determiner {
  display: none;
}

/*FICHE CHAMPIGNON*/

.diaporama img {
  max-width:60%;
  margin: 0 auto;
}

.page-champignon .slide .diaporama {
  background-color: transparent;
}

.slide .cueillette {
  right: 0;
  top: 50px;
  display: block;
  width: 50px;
  height: 50px;
  background: transparent url(images/cueillette.png) no-repeat;
}

.slide .cueillette-on {
  background-position: 0 -50px;
}





